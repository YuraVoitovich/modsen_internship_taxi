<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">


    <changeSet id="2023-11-11--04-add-rating-column-to-driver-table" author="Yura Voitovich">
        <preConditions onFail="HALT">
            <not>
                <columnExists tableName="driver_profile" columnName="rating"/>
            </not>
        </preConditions>
        <sqlFile path="sql-files/add-rating-column-to-driver-table.sql" relativeToChangelogFile="true"/>
        <rollback>
            <sqlFile path="sql-files/remove-rating-column-from-driver-table.sql" relativeToChangelogFile="true"/>
        </rollback>
    </changeSet>

</databaseChangeLog>